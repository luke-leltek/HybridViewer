<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ScanActivity">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/toogle_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/live" />


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

		<LinearLayout
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginTop="0dp">
                	<Button
                    		android:id="@+id/bMode"
                    		android:layout_width="100dp"
                    		android:layout_height="wrap_content"
                    		android:text="B" />

                	<Button
                    		android:id="@+id/cMode"
                    		android:layout_width="100dp"
                    		android:layout_height="wrap_content"
                    		android:text="CF" />
		</LinearLayout>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gain" />

                <SeekBar
                    android:id="@+id/seekBarGain"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persistence" />

                <SeekBar
                    android:id="@+id/seekBarPersistence"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4"
                    android:progress="2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enhancement" />

                <SeekBar
                    android:id="@+id/seekBarEnhancement"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:max="4"
                    android:progress="2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color PRF (kHz)" />

                <Spinner
                    android:id="@+id/spinnerColorPrf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color Sensitivity" />

                <SeekBar
                    android:id="@+id/seekBarColorSensitivity"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="7"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color Angle" />

                <Spinner
                    android:id="@+id/spinnerColorAngle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"/>

                <TextView
		    android:id="@+id/txvAdv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
		    android:text="Advanced setting" 
		/>

               <TextView
                    android:id="@+id/txvGray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gray Map" />

                <NumberPicker
                    android:id="@+id/np"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"/>






            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <leltek.hybridviewer.UsImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:scaleType="matrix" />

</LinearLayout>
